{
  "name": "click-worker",
  "version": "0.0.4",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "npm run clear && nest build",
    "clear": "rimraf dist",
    "start:dev": "nest start --watch",
    "migration:run": "npm run build && typeorm migration:run -d dist/database/data-source.js",
    "migration:dev": "typeorm migration:run -d dist/database/data-source.js",
    "test": "jest",
    "test:ci": "jest --runInBand --detectOpenHandles --passWithNoTests",
    "dev": "npm run build && npm run migration:dev && npm run start:dev",
    "ci:test": "npm run migration:run && npm run test:ci",
    "docker:dev": "docker compose -f ./docker-compose/docker-compose.yml -f ./docker-compose/docker-compose.dev.yml up --build",
    "docker:test": "docker compose -f ./docker-compose/docker-compose.yml -f ./docker-compose/docker-compose.test.yml up --build --exit-code-from backend-api",
    "lint": "eslint \"src/**/*.ts\" --max-warnings=0"
  },
  "dependencies": {
    "@cliplink/utils": "0.1.3",
    "@nats-io/jetstream": "^3.3.0",
    "@nats-io/transport-node": "^3.3.0",
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/microservices": "^11.1.9",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.1.2",
    "typeorm": "^0.3.28"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.9",
    "@types/express": "^5.0.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}